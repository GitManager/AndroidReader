<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="170dp"
    android:layout_height="80dp"
    android:background="@color/bg_color_deep" >

    <TextView
        android:id="@+id/textwaitting"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:text="test"
        android:textColor="@android:color/black"
        android:textSize="16sp" />

    <ProgressBar
        android:id="@+id/waitingProgressBar"
        android:layout_width="20dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/textwaitting"
        android:layout_marginLeft="10dp"
        android:progress="50" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textwaitting"
        android:layout_toRightOf="@id/waitingProgressBar"
        android:paddingLeft="10dp"
        android:paddingTop="13dp"
        android:text="@string/dialog_waitting_info"
        android:textColor="@android:color/black" />

</RelativeLayout>